<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
   
    <PreferenceCategory 
        android:title="@string/pref_category_bgupdates">
        
        <CheckBoxPreference 
            android:key="@string/pref_key_flag_background_update" 
            android:summary="@string/pref_summary_background_update_flag" 
            android:title="@string/pref_title_background_update_flag" />
    
    </PreferenceCategory>
    
    <PreferenceCategory 
        android:title="@string/display_prefs">
        
        <CheckBoxPreference 
            android:key="@string/pref_key_only_unread" 
            android:summary="@string/pref_summary_only_unread" 
            android:title="@string/pref_title_only_unread" />
        
        <ListPreference 
            android:title="@string/pref_choose_theme"
            android:key="com.jewellbiz.android.jewellbiz.theme"
            android:entries="@array/array_entries_listpref_apptheme"
            android:entryValues="@array/array_entryvalues_listpref_apptheme"
            android:defaultValue="0" />
    
    </PreferenceCategory>
    <PreferenceCategory 
        android:title="@string/pref_category_general">
        
        <Preference
            android:key="aboutPref"
            android:title="@string/pref_about_title" />
        
    </PreferenceCategory>
    

</PreferenceScreen>